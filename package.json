{
	"name": "@joshpress/git-cms",
	"version": "0.2.0",
	"private": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/Shelob9/git-cms"
	},
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"test": "jest",
		"build:lib": "tsdx build  --tsconfig=tsconfig.build.json",
		"lint": "tsdx lint"
	},
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"files": [
		"dist",
		"src"
	],
	"dependencies": {
		"@octokit/auth-app": "^2.11.0",
		"@octokit/rest": "^18.0.15",
		"@octokit/types": "^6.8.4",
		"@tailwindcss/forms": "^0.2.1",
		"@tailwindcss/typography": "^0.4.0",
		"@testing-library/react": "^11.2.3",
		"add": "^2.0.6",
		"autoprefixer": "^10.0.4",
		"bcrypt": "^5.0.0",
		"crypto-random-string": "^3.3.0",
		"glob": "^7.1.6",
		"jsonwebtoken": "^8.5.1",
		"next": "latest",
		"postcss": "^8.1.10",
		"react": "17",
		"react-cookie": "^4.0.3",
		"react-dom": "17",
		"tailwindcss": "^2.0.2",
		"universal-cookie": "^4.0.4",
		"uuid": "^8.3.2",
		"yarn": "^1.22.10"
	},
	"devDependencies": {
		"@types/node": "^14.14.22",
		"@types/react": "^17.0.0",
		"jest": "^26.6.3",
		"ts-jest": "^26.4.4",
		"tsdx": "^0.14.1",
		"tslib": "^2.1.0",
		"typescript": "^4.1.3"
	},
	"jest": {
		"moduleNameMapper": {
			"\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
		},
		"transform": {
			"^.+\\.(ts|tsx)$": "ts-jest"
		},
		"testMatch": [
			"**/__tests__/*.(ts|tsx)",
			"**/components/*.test.(ts|tsx)",
			"**/hooks/*.test.(ts|tsx)",
			"**/lib/*.test.(ts|tsx)",
			"**/lib/**/*.test.(ts|tsx)"
		],
		"setupFilesAfterEnv": [
			"<rootDir>/jest.setup.ts"
		],
		"testPathIgnorePatterns": [
			"./.next/",
			"./node_modules/",
			"./test-files/"
		],
		"globals": {
			"ts-jest": {
				"tsconfig": "tsconfig.jest.json"
			}
		}
	}
}
